{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "publishedAt": {
      "type": "datetime",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published"
      ],
      "required": true,
      "default": "draft"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "articles",
      "dominant": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "authors": {
      "collection": "writer",
      "via": "articles",
      "dominant": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "email_collection": {
      "type": "component",
      "repeatable": false,
      "component": "sections.email-collection"
    }
  }
}
